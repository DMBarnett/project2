<div class="col-8 offset-2">
    {{!-- ingredient image and name from database --}}
  <div class="card" id="ingredient">
    <img class="ingredient-image" src=".../100px100" alt="{{ingredient.name}}">
    <div class="card-body">
      <p class="ingredient-text">{{ingredient.name}}</p>
    </div>
  </div>
</div>

{{!-- button state when selected will appear "turned off" --}}
<div class="btn-group-toggle" data-toggle="buttons">
  <label class="btn btn-secondary active">
    <input type="checkbox" checked autocomplete="off"> Checked
  </label>
</div>


